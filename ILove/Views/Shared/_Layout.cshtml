<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="Title" content="科布尔，科小智,机器人,智能机器人，科技社区,科布尔是一个面向开发者的知识分享社区" />
    <title>@ViewBag.Title - 爱的记忆</title>
    <link rel="shortcut icon" href="http://www.kebue.com//images/kebue.ico" />
    <link rel="icon" href="http://www.kebue.com//images/kebue.ico" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Content/layer-v2.4/layer/layer.js"></script>
</head>
<body>
    <div class="container body-content">
        <div style="margin:0px;padding:0px">@RenderBody()</div>
        <br />
        <footer>
            <div  id="Idfooter">
                &nbsp;&nbsp; &copy; @DateTime.Now.ToString("yyyy-MM-dd hh:mm:ss") - 建议使用Firefox, Chrome浏览器预览效果. By<a href="http://kebue.com/" target="_blank" title="科布尔出品">科布尔出品</a>
                &nbsp;&nbsp;  &nbsp;&nbsp; <video controls="" autoplay="" name="media"><source src="~/Content/Resources/Music/@ViewBag.Music" type="audio/mpeg"></video>
            </div>
        </footer>
        <hr />
    </div>
    <script type="text/javascript">
        if (browser.versions.mobile || browser.versions.ios || browser.versions.android ||
          browser.versions.iPhone || browser.versions.iPad) {
            Alert("亲爱的请使用电脑游览，这样效果会好些");
        }
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="http://pv.sohu.com/cityjson"></script>
    <script src="~/Content/Resources/js/GetUserInfo.js"></script>
</body>
</html>
